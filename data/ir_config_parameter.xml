<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Deshabilitar completamente la validación de VAT -->
        <record id="disable_vat_validation" model="ir.config_parameter">
            <field name="key">base_vat.disable_validation</field>
            <field name="value">True</field>
        </record>
        
        <!-- Permitir formato flexible de VAT -->
        <record id="flexible_vat_format" model="ir.config_parameter">
            <field name="key">base_vat.flexible_format</field>
            <field name="value">True</field>
        </record>
        
        <!-- Deshabilitar validación específica para Perú -->
        <record id="disable_peru_vat_validation" model="ir.config_parameter">
            <field name="key">l10n_pe.disable_vat_validation</field>
            <field name="value">True</field>
        </record>
        
        <!-- Deshabilitar validación del módulo l10n_latam_base -->
        <record id="disable_latam_vat_validation" model="ir.config_parameter">
            <field name="key">l10n_latam_base.disable_vat_validation</field>
            <field name="value">True</field>
        </record>
    </data>
</odoo>
