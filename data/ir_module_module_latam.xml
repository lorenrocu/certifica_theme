<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Deshabilitar el módulo l10n_latam_base para evitar validaciones de VAT -->
        <record id="disable_latam_module" model="ir.module.module">
            <field name="name">l10n_latam_base</field>
            <field name="state">uninstalled</field>
        </record>
        
        <!-- Deshabilitar también el módulo base_vat -->
        <record id="disable_base_vat_module" model="ir.module.module">
            <field name="name">base_vat</field>
            <field name="state">uninstalled</field>
        </record>
    </data>
</odoo>
