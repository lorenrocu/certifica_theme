    <!-- Template para agregar Tawk.to chat -->
    <template id="tawk_chat_script" inherit_id="website.layout" name="Tawk.to Chat">
        <xpath expr="//body" position="inside">
            <!--Start of Tawk.to Script-->
            <script type="text/javascript">
                var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
                (function(){
                    var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
                    s1.async=true;
                    s1.src='https://embed.tawk.to/681a3e66b901ac19118f56ea/1iqj87gfb';
                    s1.charset='UTF-8';
                    s1.setAttribute('crossorigin','*');
                    s0.parentNode.insertBefore(s1,s0);
                })();
            </script>
            <!--End of Tawk.to Script-->
        </xpath>
    </template>

    <template id="safe_frontend_layout_overrides" inherit_id="web.frontend_layout" priority="20">
        <!-- Favicon robusto -->
        <xpath expr="//head" position="inside">
            <t t-if="website">
                <link rel="shortcut icon" t-att-href="website.image_url(website, 'favicon')"/>
            </t>
            <t t-elif="not website">
                <link rel="shortcut icon" href="/web/static/img/favicon.ico"/>
            </t>
        </xpath>

        <!-- Redefinir variable x_icon de forma segura para evitar 'NoneType.image_url' -->
        <xpath expr="//t[@t-set='x_icon']" position="replace">
            <t t-set="x_icon" t-value="website and website.image_url(website, 'favicon') or '/web/static/img/favicon.ico'"/>
        </xpath>

        <!-- Info de sesión/contexto robusto: eliminamos la definición problemática -->
        <xpath expr="//head/script/t[contains(@t-raw, 'get_frontend_session_info')]" position="replace">
            <t t-if="website"
               t-raw="json.dumps(request.env['ir.http'].get_frontend_session_info())"/>
        </xpath>

        <!-- Proteger chequeo de pertenencia cuando main_object es None -->
        <xpath expr="//input[contains(concat(' ', normalize-space(@class), ' '), ' o_page_option_data ')]" position="replace">
            <input t-if="main_object and (optionName in main_object)" type="hidden" class="o_page_option_data" t-att-name="optionName" t-att-value="main_object[optionName]"/>
        </xpath>

        <!-- Proteger clase o_header_overlay cuando main_object es None -->
        <xpath expr="//div[@id='wrapwrap']" position="attributes">
            <attribute name="t-attf-class">#{pageName or ''} #{request.env['res.lang']._lang_get(request.env.lang).direction == 'rtl' and 'o_rtl' or ''} #{'o_portal' if is_portal else ''} #{'o_header_overlay' if (main_object and ('header_overlay' in main_object) and main_object.header_overlay) else ''}</attribute>
            <attribute name="t-if">website</attribute>
        </xpath>

        <!-- Fallback mínimo cuando no hay website para evitar evaluaciones de website.env en subnodos -->
        <xpath expr="//div[@id='wrapwrap']" position="after">
            <t t-if="not website">
                <div id="wrapwrap"></div>
            </t>
        </xpath>

        <!-- Eliminado: XPath no fiable que buscaba partner_id.seller en la vista padre -->
    </template>


</odoo>