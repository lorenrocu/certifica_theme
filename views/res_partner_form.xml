<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario personalizada para res.partner -->
        <record id="view_partner_form_custom" model="ir.ui.view">
            <field name="name">res.partner.form.custom</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Agregar campo de tipo de identificación después del campo VAT -->
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="identification_type" 
                           options="{'no_create': True, 'no_open': True}"/>
                </xpath>
                
                <!-- Modificar el campo VAT para que se actualice automáticamente el tipo -->
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="on_change">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
