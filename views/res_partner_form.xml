<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario personalizada para res.partner -->
        <record id="view_partner_form_document_type" model="ir.ui.view">
            <field name="name">res.partner.form.document.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Agregar el campo document_type despuÃ©s del campo vat -->
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="document_type" 
                           widget="selection" 
                           options="{'no_create': True}"
                           attrs="{'readonly': [('vat', '!=', False)]}"/>
                </xpath>
                
                <!-- Agregar un campo computado que muestre el tipo detectado -->
                <xpath expr="//field[@name='document_type']" position="after">
                    <field name="document_type_detected" 
                           string="Tipo Detectado"
                           readonly="1"
                           widget="badge"
                           decoration-info="document_type == 'dni'"
                           decoration-success="document_type == 'ruc'"
                           decoration-warning="document_type == 'vat'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
