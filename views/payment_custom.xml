<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template personalizado para modificar el botón Editar en la página de payment -->
    <template id="payment_address_edit_fix" inherit_id="website_sale.payment" name="Fix Edit Address Button">
        <!-- Sobrescribir el enlace de edición de dirección de facturación -->
        <xpath expr="//div[contains(@class, 'card-header') and contains(text(), 'Facturación')]/following-sibling::div//a[contains(@href, '/shop/checkout')]" position="attributes">
            <attribute name="href">/shop/checkout?from_payment=1</attribute>
        </xpath>
        
        <!-- Alternativa: buscar por el texto "Editar" -->
        <xpath expr="//a[contains(text(), 'Editar') and contains(@href, '/shop/checkout')]" position="attributes">
            <attribute name="href">/shop/checkout?from_payment=1</attribute>
        </xpath>
        
        <!-- Otra alternativa: buscar por el icono de edición -->
        <xpath expr="//a[contains(@href, '/shop/checkout') and .//i[contains(@class, 'fa-edit')]]" position="attributes">
            <attribute name="href">/shop/checkout?from_payment=1</attribute>
        </xpath>
    </template>
</odoo>